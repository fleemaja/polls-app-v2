@import '_normalize.styl'
@import '_typography.styl'

body
  background offwhite

.poll-title
  text-decoration none
  color #428bca
  &:hover
    color #333

.result-bar
  height 24px
  line-height 24px
  margin-bottom 18px
  border-radius 5px
  white-space nowrap
  span
    margin 0 0 0 5px
    strong
      font-size 16px

.masonry-grid
  margin 0 auto

.options
  font-size 16px

.photo-grid
  display flex
  flex-wrap wrap
  max-width 1200px
  margin 0 auto

.grid-figure
  flex-basis calc(33.333% - 4rem)
  flex-grow 1
  flex-shrink 0
  margin 0 2rem 2rem 2rem
  padding 2rem
  border 1px solid lightgray
  background white
  box-shadow 0 0 0 5px rgba(0,0,0,0.03);
  position relative

.single-photo
  @extend .grid-figure
  max-width 900px
  margin 0 auto
  display flex
  background white
  .grid-figure
    box-shadow none
    margin 0 2rem 0 0
    border 0
    padding 0
    flex 1 0 60%
    max-width 60%
  .comments
    flex 1 0 40%
    max-width 40%
  .grid-photo
    width 100%
    margin 0

.grid-photo
  width calc(100% + 4rem)
  margin-left -2rem
  margin-top -2rem
  max-width none

// Comments
.remove-comment
  background none
  border 0
  line-height 1
  display none
  &:hover
    color red

.comment
  border-bottom 1px solid lightgrey
  padding 0.5rem 0
  margin 10px 0
  p
    font-size 1.5rem
    margin 0
  strong
    color blue
    margin-right 5px
  &:hover
    .remove-comment
      display inline-block

.comment:nth-last-child(1)
  padding-bottom 60px

.comment-form
  padding-bottom 40px

.comments-section
  margin 40px auto
  max-width 680px

.comments-content
  margin 0 40px

.grid-photo-wrap
  position relative
